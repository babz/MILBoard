<Window x:Class="BodyExtractionAndHightlighting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Width="850" Height="700">
    <StackPanel>
        <RadioButton Content="1080p" />
        <RadioButton Content="800x600" IsChecked="True"/>
        <Slider Minimum="0" Maximum="100" IsSnapToTickEnabled="False" TickFrequency="10" />
        <RadioButton Content="Black" />
        <RadioButton Content="White" />
        
        <Canvas Height="600">
            <Canvas.Background>
                <ImageBrush ImageSource="Resources\sharedWorkspace.jpg" Stretch="Fill" />
            </Canvas.Background>
            <Image x:Name="imageCombi" Canvas.Left="20" Canvas.Top="10" Width="800" Height="600" />
            <Image x:Name="imageBody" Canvas.Left="20" Canvas.Top="10" Width="800" Height="600" Canvas.ZIndex="1"/>
        </Canvas>
    </StackPanel>
   
</Window>
