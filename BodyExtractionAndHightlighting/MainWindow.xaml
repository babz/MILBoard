<Window x:Class="BodyExtractionAndHightlighting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Width="850" Height="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="150" />
            <ColumnDefinition Width="Auto" MinWidth="300" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Resolution:" />
        <Label Grid.Row="0" Grid.Column="1" Content="Transparency of user:" />
        <Label Grid.Row="0" Grid.Column="2" Content="Background:" />

        <!--Dynamic Content-->
        <RadioButton Name="fullHD" Grid.Row="1" Grid.Column="0" Content="1080p" GroupName="Resolution" Checked="ResolutionRButton_Checked"/>
        <RadioButton Name="nonFullHD" Grid.Row="2" Grid.Column="0" Content="800x600" GroupName="Resolution" IsChecked="True" Checked="ResolutionRButton_Checked"/>
        
        <Slider Grid.Row="2" Grid.Column="1" Value="150" Maximum="255" TickFrequency="20" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Name="userTransparency" />

        <RadioButton Grid.Row="1" Grid.Column="2" Content="Black" GroupName="Background" />
        <RadioButton Grid.Row="2" Grid.Column="2" Content="White" GroupName="Background" />
        <RadioButton Grid.Row="3" Grid.Column="2" Content="Custom" GroupName="Background" IsChecked="True"/>

        <Canvas Grid.Row="4" Grid.ColumnSpan="3">
            <Canvas.Background>
                <ImageBrush ImageSource="Resources\sharedWorkspace.jpg" Stretch="Fill" />
            </Canvas.Background>
            <Image x:Name="imageCombi" Canvas.Left="20" Canvas.Top="10" Width="800" Height="600" />
            <Image x:Name="imageBody" Canvas.Left="20" Canvas.Top="10" Width="800" Height="600" Canvas.ZIndex="1"/>
        </Canvas>
    </Grid>

</Window>
